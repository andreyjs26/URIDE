<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="URIDE.Views.UserPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Digita tu nombre"></Entry>
            <Entry Placeholder="Digita tu apellido"></Entry>
            <Entry Placeholder="Digita tu correo"></Entry>
            <Entry Placeholder="Digita tu contraseña" IsPassword="True"></Entry>
            <Entry Placeholder="Digita tu residencia"></Entry>
            <Entry Placeholder="Digita tu destino"></Entry>
            <Entry Placeholder="Digita tu hora de entrada"></Entry>
            <Entry Placeholder="Digita tu hora de salida"></Entry>           
            <Label Text="Tienes alguna discapacidad?" />
            <Switch x:Name="swhDiscapacity" Toggled="swhDiscapacity_Toggled"  />
            <Button Text="Guardar" x:Name="btnSave" Clicked="btnSave_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>