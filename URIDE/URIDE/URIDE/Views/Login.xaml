<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="URIDE.Views.Login"  
             BackgroundColor="Black"
            >
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Text="Acceder" Clicked="OnSignUpButtonClicked" />
    </ContentPage.ToolbarItems>-->
    <ContentPage.Content>
         <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="Center">
            <Image Source="logo.png"/>
            <Label FontSize="Medium" Text="Cambiando tu forma de viajar" TextColor="#FFEE58" HorizontalOptions="Center"></Label>
            <Label></Label>
            <Entry x:Name="emailEntry" Placeholder="Email" BackgroundColor="White" />
            <Entry x:Name="passwordEntry" IsPassword="true" Placeholder="Contraseña" BackgroundColor="White"/>
            <Label x:Name="messageLabel" />
            <Button Text="Acceder" Clicked="Button_Clicked" />
            <Label FontSize="Medium" Text="Registrate ahora" TextColor="#FFEE58" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>            
            <Image Source="city.png"  />
        </StackLayout> 
    </ContentPage.Content>
</ContentPage>